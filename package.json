{
  "name": "hooks-demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bmr-react-scripts": "git+ssh://git@github.com:SeedJobs/bmr-react-scripts.git#v2.1.1-g",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "single-spa-react": "^2.9.0"
  },
  "scripts": {
    "start": "BMR_ENV=development react-scripts start",
    "start-independent": "react-scripts start",
    "storybook": "start-storybook -p 3001",
    "build": "BMR_ENV=production react-scripts build",
    "build-dev": "BMR_ENV=development react-scripts build",
    "build-staging": "BMR_ENV=staging react-scripts build",
    "build-storybook": "build-storybook",
    "lint": "yarn lint-scss && yarn lint-scripts",
    "lint-scripts": "eslint './src/**/*.[j|t]s?(x)'",
    "lint-scss": "stylelint './src/**/*.?(s)css'",
    "test": "react-scripts test",
    "test-coverage": "yarn test --coverage"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.stories.*",
      "!src/**/(serviceWorker|setupTests).*"
    ]
  },
  "lint-staged": {
    "./src/**/*.?(s)css": [
      "yarn lint-scss --fix",
      "git add"
    ],
    "./src/**/*.[j|t]s?(x)": [
      "yarn lint-scripts --fix --quiet",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@storybook/addon-actions": "^4.1.4",
    "@storybook/addon-knobs": "^4.1.4",
    "@storybook/addon-links": "^4.1.4",
    "@storybook/addons": "^4.1.4",
    "@storybook/react": "^4.1.4",
    "babel-loader": "^8.0.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
